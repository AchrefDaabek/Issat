{% extends 'admin-dash.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}

{% endblock %}

{% block container %}
    {{ parent() }}

{% endblock %}

	{% block content %}
        <!-- start page content -->
        <div class="page-content-wrapper">
            <div class="page-content">
                <div class="page-bar">
                    <div class="page-title-breadcrumb">
                        <div class=" pull-left">
                            <div class="page-title">Add Library Assets</div>
                        </div>
                        <ol class="breadcrumb page-breadcrumb pull-right">
                            <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item"
                                                                   href="index.html">Home</a>&nbsp;<i
                                        class="fa fa-angle-right"></i>
                            </li>
                            <li><a class="parent-item" href="#">Library</a>&nbsp;<i class="fa fa-angle-right"></i>
                            </li>
                            <li class="active">Add Library Assets</li>
                        </ol>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12">
                        <div class="card card-box">
                            <div class="card-head">
                                <header>Add Library Assets</header>

                            </div>
                            <div class="card-body" id="bar-parent">

                                {{ form_start(form) }}
                                    <div class="form-body">
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Title
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-5">
                                                {{ form_widget(form.title , { 'attr': {'class': 'form-control input-height', 'placeholder':"enter title " } } ) }}

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Subject <span
                                                        class="required"> * </span>
                                            </label>
                                            <div class="col-md-5">



                                                {{ form_widget(form.subject , { 'attr': {'class': 'form-control input-height', 'placeholder':"enter subject " } } ) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Auther Name
                                            </label>
                                            <div class="col-md-5">
                                                {{ form_widget(form.autherName , { 'attr': {'class': 'form-control input-height', 'placeholder':"Auther Name" } } ) }}

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Publisher
                                            </label>
                                            <div class="col-md-5">

                                                {{ form_widget(form.publisher , { 'attr': {'class': 'form-control input-height', 'placeholder':"Publisher" } } ) }}

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Department <span
                                                        class="required"> * </span>
                                            </label>
                                            <div class="col-md-5">
                                                {{ form_widget(form.departement , { 'attr': {'class': 'form-control input-height', 'placeholder':"departement" } } ) }}

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Asset Type <span
                                                        class="required"> * </span>
                                            </label>
                                            <div class="col-md-5">
                                                {{ form_widget(form.type , { 'attr': {'class': 'form-control input-height', 'placeholder':"Assets Type" } } ) }}

                                            </div>
                                        </div>


                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Status <span
                                                        class="required"> * </span>
                                            </label>
                                            <div class="col-md-5">
                                                {{ form_widget(form.status , { 'attr': {'class': 'form-control input-height', 'placeholder':"Status" } } ) }}

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Publish Date
                                            </label>
                                            <div class="col-md-5">

                                                {{ form_widget(form.year , { 'attr': {'class': 'form-control input-height', 'placeholder':" Publish Date" } } ) }}


                                                </textarea>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="control-label col-md-3">Asset Details
                                            </label>
                                            <div class="col-md-5">

                                                {{ form_widget(form.assetDetails , { 'attr': {'class': 'form-control input-height', 'placeholder':"Asset details" } } ) }}


                                                </textarea>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="offset-md-3 col-md-9">
                                                    <button type="submit" class="btn btn-info">Submit</button>
                                                    <button type="button" class="btn btn-default">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end page content -->
    {% endblock %}

{% block includeJS %}
    {{ parent() }}

{% endblock %}

