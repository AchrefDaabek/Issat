{% extends 'admin-dash.twig' %}

{% block head  %}
    {{ parent() }}
{% endblock %}

{% block header  %}
    {{ parent() }}

{% endblock %}

{% block container  %}
    {{ parent() }}

{% endblock %}
{% block content %}
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">Add class</div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="#">Department</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">Add Class</li>
                    </ol>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="card card-box">
                        <div class="card-head">
                            <header>Add Class</header>

                        </div>
                        <div class="card-body" id="bar-parent">
                                {{ form_start(form) }}

                                <div class="form-body">
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">Class Name
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-5">
                                            {{ form_widget(form.name , { 'attr': {'class': 'form-control input-height', 'placeholder':"Class Name" } } ) }}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="control-label col-md-3">Department Name
                                        </label>
                                        <div class="col-md-5">
                                            {{ form_widget(form.departement , { 'attr': {'class': 'form-control input-height', 'placeholder':"Departement Name" } } ) }}
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label class="control-label col-md-3">Student Capacity.
                                            <span class="required"> * </span>
                                        </label>
                                        <div class="col-md-5">
                                            {{ form_widget(form.capacity , { 'attr': {'class': 'form-control input-height', 'placeholder':"Capacity" } } ) }}
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="offset-md-3 col-md-9">
                                                <button type="submit" class="btn btn-info">Submit</button>
                                                <button type="button" class="btn btn-default">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {{ form_end(form) }}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end page content -->

{% endblock %}
    {% block includeJS  %}
        {{ parent() }}

    {% endblock %}


