{% extends 'admin-dash.twig' %}

{% block head  %}
    {{ parent() }}
{% endblock %}

{% block header  %}
    {{ parent() }}

{% endblock %}

{% block container  %}
    {{ parent() }}

{% endblock %}
{% block content %}
<!-- start page content -->
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <div class="page-title-breadcrumb">
                <div class=" pull-left">
                    <div class="page-title">All Courses List</div>
                </div>
                <ol class="breadcrumb page-breadcrumb pull-right">
                    <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li><a class="parent-item" href="#">Courses</a>&nbsp;<i class="fa fa-angle-right"></i>
                    </li>
                    <li class="active">All Courses List</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="card-box">
                <div class="card-head">
                    <header>All Courses</header>
                </div>
                <div class="card-body ">
                    <!-- start course list -->
                    <div class="row">
                        {% for course in courses %}

                        <div class="col-lg-3 col-md-6 col-12 col-sm-6">
                            <div class="blogThumb">
                                <div class="thumb-center"><img class="img-responsive" alt="user" src="{{ asset('/UPImages/' ~ course.image) }}"></div>
                                <div class="course-box">
                                    <h4>{{ course.name }}</h4>
                                    <div class="text-muted"><span class="m-r-10">{{ course.startingDate }}</span>
                                    </div>
                                    <p><span><i class="ti-alarm-clock"></i> Duration: {{ course.duration }} Months</span></p>
                              <p><span><i class="fa fa-graduation-cap"></i> Students: 200+</span></p>

                                    <a  href="{{ path('course_details', {'id': course.id}) }}" ><button type="button" href="{{ path('course_details', {'id': course.id}) }}" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect m-b-10 btn-info">Read More</button></a>

                                    {% if is_granted('ROLE_SUPER_ADMIN') %}

                                     <a href="{{ path('course_edit', { 'id': course.id  }) }}" class="btn btn-primary btn-xs">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <button class="btn btn-danger btn-xs">
                                          <a href="{{ path('course_delete', { 'id': course.id  }) }}" ></a><i class="fa fa-trash-o "></i>
                                    </button>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    <!-- End course list -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end page content -->
{% endblock %}
{% block includeJS  %}
    {{ parent() }}

{% endblock %}


